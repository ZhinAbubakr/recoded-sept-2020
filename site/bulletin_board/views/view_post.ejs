<%- include('header', { title: 'Post' }); %>
<%- include('nav_bar', { id: null }); %>

<!-- Page Content -->
<div style=" background: #202D36 ;height: 50rem">
<div>
<div class="container py-3" >
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">

      <div class="post-preview">
        <h2 class="post-title" style="color: white;">
          <a data-postid="<%= post.id %>" id="thumbs_up_on" <% if (!post.liked) { %>style="display: none;"<% } %>><i class="fa fa-thumbs-up"></i></a>
          <a data-postid="<%= post.id %>" id="thumbs_up_off" <% if (post.liked) { %>style="display: none;"<% } %>><i class="fa fa-thumbs-up" style="color: #DDD;" id="thumbs_up_off"></i></a>
         
          <%= post.title %>
        </h2>

        <p class="text-muted" > Posted by <a><%= post.author %> </a> on <%= post.date %></p>
        <p class="post-subtitle text-break" style="color: #637987;">
          <%= post.body %>
        </p>
      </div>
      <div class="shadow" style="background: #202D36">
      <%- include('create_comment', {post_id:post.id });%>

      <!--display comments -->
      <%- include('comment_list',{post,comments,userName}); %>
    </div>
    </div>
  </div>
</div>
</div>
</div>
<%- include('footer', { javascript_uri: '/javascripts/comment.js' }); %>
<%- include('footer', { javascript_uri: '/javascripts/view_post.js' }); %>
